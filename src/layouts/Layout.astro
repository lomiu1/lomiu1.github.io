---
import Icon from '../assets/icon.png';
import Header from '../components/Header.astro';

export interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
const titleText = title ? `${title} â€” Fyrescan` : "Fyrescan";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={Icon.src} />
		<meta name="generator" content={Astro.generator} />
		<title>{titleText}</title>

		<!-- Fonts: Quicksand for body, Outfit for titles -->
		<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&family=Outfit:wght@300;400;600;700;800&display=swap" rel="stylesheet">

		<style>
			/* Global typography: Quicksand for most UI, Outfit for headings */
			:root { font-family-system: 'Quicksand', sans-serif; }
			html, body { font-family: 'Quicksand', sans-serif; }
			h1, h2, h3, h4, h5, h6, .hero-title { font-family: 'Outfit', sans-serif; }
		</style>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

	<style>
		/* Global responsive styles */
		html,
		body {
			margin: 0;
			width: 100%;
			height: 100%;
		}

		/* Desktop: 1025px+ */
		@media (min-width: 1025px) {
			html, body {
				width: 100%;
			}
		}

		/* Tablet: 768px - 1024px */
		@media (min-width: 768px) and (max-width: 1024px) {
			html, body {
				width: 100vw;
				min-width: 0;
				box-sizing: border-box;
			}
		}

		/* Mobile large (phablet): 600px - 767px */
		@media (min-width: 600px) and (max-width: 767px) {
			html, body {
				width: 100vw;
				min-width: 0;
				box-sizing: border-box;
			}
		}

		/* Mobile small: 375px - 599px */
		@media (min-width: 375px) and (max-width: 599px) {
			html, body {
				width: 100vw;
				min-width: 0;
				box-sizing: border-box;
			}
		}
	</style>
