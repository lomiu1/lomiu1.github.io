---
import uno from '../assets/uno.jpg';
import dos from '../assets/dos.jpg';
import tres from '../assets/tres.jpg';
import cuatro from '../assets/cuatro.jpg';
import cinco from '../assets/cinco.jpg';
---

<nav class="hero">
    <div class="hero-inner">
        <div class="hero-left">
            <div class="slideshow" aria-hidden>
                <img src={uno.src} alt="Imagen con estudiantes" class="active" />
                <img src={dos.src} alt="Imagen con estudiantes" />
                <img src={tres.src} alt="Imagen con estudiantes" />
                <img src={cuatro.src} alt="Imagen con estudiantes" />
                <img src={cinco.src} alt="Imagen con estudiantes" />
            </div>
        </div>

        <div class="hero-right">
            <div class="hero-content">
                <h1 class="hero-title">Fyrescan</h1>
                <p class="hero-subtitle"><i>“Formando futuros, inspirando mentes.”</i></p>
            </div>
        </div>
    </div>
</nav>

<style>
    .hero{ width:100%; height:70vh; min-height:320px; }
    .hero-inner{
        display: flex;
        width: 100%;
        height: 100%;
    }

    /* izquierda: imagen 70% */
    .hero-left{ flex: 0 0 70%; overflow: hidden; position: relative; }

    /* Slideshow container */
    .slideshow { position: relative; width: 100%; height: 100%; }
    .slideshow img{ 
        position: absolute;
        top: 0;
        left: 0;
        width: 100%; 
        height: 100%; 
        object-fit: cover;
        opacity: 0;
        transition: opacity 1s ease-in-out; /* transición suave de 1s */
    }
    .slideshow img.active { opacity: 1; }

    /* derecha: bloque de color 30% */
    .hero-right{ flex: 1 1 30%; background: linear-gradient(180deg,var(--accent, #1696eb), #2b6b94); display:flex; align-items:center; justify-content:center; }

    /* contenido dentro de la zona derecha: solo título y frase */
    .hero-content{ text-align:center; padding: 0 1rem; }
    .hero-title{ font-family: "Outfit", sans-serif; font-size: 3rem; margin:0; color: #ffffff; }
    .hero-subtitle{ margin:0; font-size:1.2rem; color: rgba(255,255,255,0.9); margin-top:0.5rem; }

    /* Responsive: en pantallas pequeñas apilamos y centramos */
    @media (max-width: 900px){
        .hero{ height: 70vh; min-height: 360px; }
        .hero-inner{ flex-direction: column; }
        .hero-left{ flex: 0 0 auto; width:100%; height: 65%; }
        .hero-left img{ height:100%; }
        .hero-right{ flex: 0 0 auto; width:100%; height: 35%; }
        .hero-title{ font-size: 1.6rem; }
        .hero-subtitle{ font-size: 0.95rem; }
    }
</style>

<script>
    (function(){
        // Slideshow: cada imagen visible 2s, luego transición de fade (1s) a la siguiente
        const slides = document.querySelectorAll('.slideshow img');
        if(!slides || slides.length === 0) return;
        
        let current = 0;
        const total = slides.length;
        const displayTime = 3000; // 2 segundos de visualización
        const fadeTime = 1000;    // 1 segundo de transición
        const totalTime = displayTime + fadeTime; // 3 segundos total por imagen

        setInterval(()=>{
            const next = (current + 1) % total;
            slides[current].classList.remove('active');
            slides[next].classList.add('active');
            current = next;
        }, totalTime);
    })();
</script>
