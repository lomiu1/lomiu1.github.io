---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import blogImg1 from '../assets/blog1.jpg';
import blogImg2 from '../assets/blog2.jpg';
import blogImg3 from '../assets/blog3.jpg';
import blogImg4 from '../assets/blog4.jpg';
import blogImg5 from '../assets/blog5.jpg';
import blogImg6 from '../assets/blog6.png';

// Simulación de entradas de blog
const posts = [
  {
    title: "Bienvenido a nuestro Blog",
    date: "2025-11-12",
    excerpt: "Descubre novedades, consejos y noticias sobre nuestros cursos y formación.",
    slug: "bienvenido-blog",
    author: "Equipo Fyrescan",
    image: blogImg1
  },
  {
    title: "¿Por qué formarte con nosotros?",
    date: "2025-10-28",
    excerpt: "Te contamos las ventajas de elegir Fyrescan para tu desarrollo profesional.",
    slug: "ventajas-fyrescan",
    author: "Marta González",
    image: blogImg2
  },
  {
    title: "Cómo elegir el curso ideal para ti",
    date: "2025-10-10",
    excerpt: "¿No sabes qué curso escoger? Te damos algunos consejos para tomar la mejor decisión según tus intereses y objetivos.",
    slug: "elegir-curso-ideal",
    author: "Luis Pérez",
    image: blogImg3
  },
  {
    title: "Historias de éxito: nuestros alumnos opinan",
    date: "2025-09-25",
    excerpt: "Conoce testimonios reales de personas que han transformado su vida profesional gracias a nuestra formación.",
    slug: "historias-exito",
    author: "Equipo Fyrescan",
    image: blogImg4
  },
  {
    title: "Tendencias en formación online para 2026",
    date: "2025-09-10",
    excerpt: "Descubre las nuevas tendencias y tecnologías que marcarán el futuro de la educación a distancia.",
    slug: "tendencias-formacion-online",
    author: "Ana Torres",
    image: blogImg5
  },
  {
    title: "Consejos para estudiar desde casa y no rendirse",
    date: "2025-08-30",
    excerpt: "Te compartimos trucos y hábitos para mantener la motivación y el enfoque cuando estudias online.",
    slug: "consejos-estudiar-casa",
    author: "Carlos Ruiz",
    image: blogImg6
  }
];
---

<Layout title="Blog">
  <Nav />
  <main class="blog-main">
    <h1>Blog</h1>
    <ul class="blog-list">
      {posts.map(post => (
        <li class="blog-item">
          <div class="blog-img-wrap">
            <img src={post.image.src} alt={post.title} class="blog-img" loading="lazy" />
          </div>
          <div class="blog-content">
            <h2>{post.title}</h2>
            <div class="blog-meta">
              <span class="blog-date">{post.date}</span>
              <span class="blog-author">por {post.author}</span>
            </div>
            <p>{post.excerpt}</p>
            <a href={`/blog/${post.slug}`} class="blog-link">Leer más</a>
          </div>
        </li>
      ))}
    </ul>
  </main>
  <Footer />
</Layout>

<style>
/* Desktop: 1025px+ */
.blog-main {
  max-width: 1050px;
  margin: 2rem auto;
  padding: 1rem;
  min-width: 0;
  width: 100%;
  box-sizing: border-box;
}
.blog-list {
  list-style: none;
  padding: 0;
}
.blog-item {
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.07);
  margin-bottom: 2.5rem;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}
.blog-img-wrap {
  min-width: 220px;
  max-width: 260px;
  width: 32%;
  height: 200px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #eee;
}
.blog-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
.blog-content {
  padding: 1.2rem 1.5rem;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.blog-meta {
  font-size: 0.95rem;
  color: #888;
  margin-bottom: 0.5rem;
  display: flex;
  gap: 1.2rem;
}
.blog-author {
  font-style: italic;
}
.blog-link {
  display: inline-block;
  margin-top: 0.7rem;
  color: #0099cc;
  text-decoration: none;
  font-weight: 600;
}
.blog-link:hover {
  text-decoration: underline;
}

/* Tablet: 768px - 1024px */
@media (min-width: 768px) and (max-width: 1024px) {
  .blog-main {
    max-width: 100vw;
    margin: 1.8rem auto;
    padding: 0.8rem;
    width: 100vw;
  }
  .blog-item {
    margin-bottom: 2rem;
  }
  .blog-img-wrap {
    min-width: 190px;
    max-width: 220px;
    width: 30%;
    height: 180px;
  }
  .blog-content {
    padding: 1rem 1.2rem;
  }
  .blog-meta {
    font-size: 0.9rem;
    gap: 1rem;
  }
  h1 {
    font-size: 2rem;
  }
  h2 {
    font-size: 1.2rem;
  }
}

/* Mobile large (phablet): 600px - 767px */
@media (min-width: 600px) and (max-width: 767px) {
  .blog-main {
    max-width: 100vw;
    margin: 1.5rem auto;
    padding: 0.6rem;
    width: 100vw;
    box-sizing: border-box;
  }
  .blog-item {
    flex-direction: column;
    min-width: 0;
    margin-bottom: 1.8rem;
    border-radius: 8px;
  }
  .blog-img-wrap {
    width: 100%;
    max-width: 100%;
    min-width: 0;
    height: 170px;
  }
  .blog-content {
    padding: 0.9rem;
  }
  .blog-meta {
    font-size: 0.85rem;
    gap: 1rem;
    margin-bottom: 0.4rem;
  }
  .blog-link {
    margin-top: 0.6rem;
    font-size: 0.95rem;
  }
  h1 {
    font-size: 1.7rem;
    margin-bottom: 1.2rem;
  }
  h2 {
    font-size: 1.1rem;
  }
}

/* Mobile small: 375px - 599px */
@media (min-width: 375px) and (max-width: 599px) {
  .blog-main {
    max-width: 100vw;
    margin: 1.2rem auto;
    padding: 0.4rem;
    width: 100vw;
    box-sizing: border-box;
  }
  .blog-list {
    padding: 0;
  }
  .blog-item {
    flex-direction: column;
    min-width: 0;
    margin-bottom: 1.5rem;
    border-radius: 6px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  }
  .blog-img-wrap {
    width: 100%;
    max-width: 100%;
    min-width: 0;
    height: 150px;
  }
  .blog-content {
    padding: 0.7rem;
  }
  .blog-content h2 {
    font-size: 1rem;
    margin: 0 0 0.3rem 0;
  }
  .blog-meta {
    font-size: 0.8rem;
    color: #999;
    margin-bottom: 0.3rem;
    gap: 0.8rem;
    flex-direction: column;
  }
  .blog-author {
    font-style: italic;
  }
  .blog-content p {
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0.5rem 0;
  }
  .blog-link {
    display: inline-block;
    margin-top: 0.5rem;
    font-size: 0.9rem;
    color: #0099cc;
  }
  h1 {
    font-size: 1.4rem;
    margin: 1rem 0.4rem 0.8rem 0.4rem;
  }
}
</style>
